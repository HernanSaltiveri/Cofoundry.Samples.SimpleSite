@inherits CofoundryTemplatePage<PageViewModel>
@using Cofoundry.Domain

@Cofoundry.Template.UseDescription("A template for simple pages with flexible module content")

<div class="container">
    <div class="row content-block">
        <div class="col-sm-12">
            <h1>@Model.PageTitle</h1>
        </div>
    </div>
    @*
        Note here that we can use AllowModuleTypes() to specify multiple
        module types. Using the generic AllowModuleType<TModuleType>()
        multiple times is preferable because it doesn't rely on magic
        strings, but there may be situations where this is more advantageous.
    *@
    @(Cofoundry.Template.Section("Body")
        .AllowMultipleModules()
        .AllowModuleTypes("ContentSection", "ContentSplitSection")
        .EmptyContentMinHeight(500))

</div>
