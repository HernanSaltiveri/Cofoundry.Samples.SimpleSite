@inherits CofoundryTemplatePage<PageViewModel>
@using Cofoundry.Domain

@Cofoundry.Template.UseDescription("This template shoud only be used for the homepage")

<div class="hero-banner">
    <img src="/content/images/hero-banner-bg.jpg">
    <div class="hero-banner__overlay"></div>
</div>

<div class="container">
    <div class="row content-block">
        <div class="col-sm-12">
            <h1>
                @(Cofoundry
                    .Template
                    .Section("Introduction Title")
                    .AllowModuleType<PlainTextDataModel>())
            </h1>
            @(Cofoundry
                .Template
                .Section("Introduction")
                .AllowModuleType<RichTextWithMediaDataModel>()
                .EmptyContentMinHeight(200))
        </div>
    </div>

    <div class="row blog-cards">
        <div class="col-sm-12 ">
            <h2>From our blog</h2>
        </div>

        @Html.Action("HomepageBlogPosts", "BlogPosts")
    </div>
</div>
