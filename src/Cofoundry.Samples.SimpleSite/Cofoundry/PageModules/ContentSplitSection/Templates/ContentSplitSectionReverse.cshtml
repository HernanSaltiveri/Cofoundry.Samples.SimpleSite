@inherits CofoundryWebViewPage<ContentSplitSectionDisplayModel>
@using Cofoundry.Web

<div class="row content-block">
    <div class="col-sm-6">
        <img src="@Cofoundry.Routing.ImageAsset(Model.Image)" class="img-responsive img-thumbnail">
    </div>

    <div class="col-sm-6">
        @if (!string.IsNullOrWhiteSpace(Model.Title))
        {
            <h2>@Model.Title</h2>
        }
        @Model.HtmlText
    </div>
</div>